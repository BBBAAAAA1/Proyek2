//OLED GAMBAR END

int i = 0;
int menu = 0;
String input;

void blinking() {  //blinking 3 kali
  for (i; i <= 2; i++) {
    digitalWrite(48, HIGH);
    digitalWrite(50, HIGH);
    digitalWrite(52, HIGH);
    display.showNumberDec(0, true);
    delay(100);
    digitalWrite(48, LOW);
    digitalWrite(50, LOW);
    digitalWrite(52, LOW);
    display.clear();
    delay(100);
  }
}

void led(int r, int y, int g) {
  digitalWrite(RED, r);
  digitalWrite(YELLOW, y);
  digitalWrite(GREEN, g);
}

//void sevenSeg(){
//display.showNumberDec(0, true);
//}

void setup() {
  // put your setup code here, to run once:
  pinMode(48, OUTPUT);
  pinMode(50, OUTPUT);
  pinMode(52, OUTPUT);
  display.setBrightness(0x0f);  //7seg
  // initialize the OLED object
  if (!display1.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.println(F("SSD1306 allocation failed"));
    for (;;)
      ;  // Don't proceed, loop forever
  }
  //oled
  // Clear the buffer.
  display1.clearDisplay();  //oled
  // Oled begin
  display1.display();  // oled
  //oled end

  //rgb
  Serial.begin(9600);
  if (tcs.begin()) {
  } else {
    Serial.println("No TCS34725 found ... check your connections");
    while (1)
      ;
  }
  for (int i = 0; i < 256; i++) {
    float x = i;
    x /= 255;
    x = pow(x, 2.5);
    x *= 255;

    if (commonAnode) {
      gammatable[i] = 255 - x;
    } else {
      gammatable[i] = x;
    }
  }
  //rgb end

  //accelStepper
  stepper.setMaxSpeed(1000.0);
  stepper.setAcceleration(50.0);
  stepper.setSpeed(200);
  //accelStepper
}

void loop() {
  // put your main code here, to run repeatedly:
  while (menu == 0) {
    blinking();
    myStepper.setSpeed(10);
    myStepper.step(-stepsPerRevolution);
    // step one revolution in the other direction:
    myStepper.setSpeed(10);
    myStepper.step(stepsPerRevolution);
    delay(100);
    menu = 1;
  }

  while (menu == 1) {
    for (int a = 0; a <= 2; a++) {
      led(1, 0, 0);
      delay(100);
      led(0, 0, 0);
      delay(100);
      led(0, 1, 0);
      delay(100);
      led(0, 0, 0);
      delay(100);
      led(0, 0, 1);
      delay(100);
      led(0, 0, 0);
      delay(100);
    }
    display.showNumberDec(0, true);
    menu = 2;
  }

  while (menu == 2) {
    display1.clearDisplay();
    display1.display();
    char key = customKeypad.getKey();
    if (key) {
      if (key >= '0' && key <= '9') {
        input += key;
      }
      if (key == 'A') {
        if (input.toInt() == 2024) {
          menu = 3;  // pass benar
        } else {
          menu = 4;  // pass salah
        }
      }
      if (key == 'B') {
        //perintah selanjutnya
      }
      if (key == 'C') {
        input = "";  //clear 7segment
      }
      if (key == 'D') {
        input.remove(input.length() - 1);
      }
      display.showNumberDec(input.toInt(), true);  //keypad to 7segment
    }
  }

  while (menu == 3) {
    input = "";
    display.showNumberDec(0, true);
    display1.clearDisplay();
    // Display bitmap
    display1.drawBitmap(0, 0, MarilynMonroe, 128, 64, WHITE);
    display1.display();
    menu = 5;
  }

  while (menu == 4) {
    display.showNumberDec(0, true);
    display1.clearDisplay();
    // Display bitmap
    display1.drawBitmap(0, 0, xIcon, 128, 64, WHITE);
    display1.display();
    delay(200);
    input = "";
    menu = 2;
  }

  while (menu == 5) {
    float red, green, blue;
    tcs.setInterrupt(false);
    delay(60);
    tcs.getRGB(&red, &green, &blue);
    tcs.setInterrupt(true);

    Serial.print("R:\t");
    Serial.print(int(red));
    Serial.print("\tG:\t");
    Serial.print(int(green));
    Serial.print("\tB:\t");
    Serial.print(int(blue));

    Serial.print("\n");
    led(0, 0, 0);
    if (red >= 115 && green >= 90 && blue >= 25)  //-> jika kuning
    {
      stepper.moveTo(339.6667);
      stepper.run();
      led(0, 1, 1);
    }

    else if (red >= 140 && green >= 40 && blue >= 60) {  //jika  red
      led(0, 1, 0);
    }

    char key = customKeypad.getKey();
    if (key) {
      if (key == 'A') {
        menu = 0;
        input = "";
        i = 0;
      }
      if (key == 'B') {
        menu = 2;
        input = "";
      }
      if (key == 'C') {
        myStepper.setSpeed(10);
        myStepper.step(-339.6667);
      }
      if (key == 'D') {
        myStepper.setSpeed(10);
        myStepper.step(339.6667);
      }
    }
  }
}